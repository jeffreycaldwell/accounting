<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <div style="width: 50%; margin: 0 auto;">
            <h1 style="text-align: left;">Add a new comment to <%= company.name %></h1>
            <form action="/companies/<%= company._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/companies">Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>