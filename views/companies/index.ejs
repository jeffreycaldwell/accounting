<% include ../partials/header %>

    

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Accounting</h1>
            <p>Which company would you like to work on?</p>
            <a class="btn btn-primary btn-large" href="/companies/new">Add new company</a>
        </div>
    </header>
    
    
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% companies.forEach(function(company){ %>
            <div class="col-md-3 col-sm-6">
                <h4>Name: <%= company.name %></h4>
                <h5>Balance: <%= company.balance %></h5>
                <p>
                <a href="/companies/<%= company._id %>" class="btn btn-primary">Accounts</a>
            </p>
            </div>
            
        <% }); %>
    </div>
    
    
    
    
</div>

<% include ../partials/footer %>