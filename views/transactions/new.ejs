<% include ../partials/header %>



<div class="container">
    
       
            <h1 style="text-align: left;">Add a new Transaction</h1>
            <form id="transactionForm" action="" method="POST">
                <h3>Debit</h3>
                <div class="row">
                    <div class="col col-sm-1">1</div>
                    <div class="col col-sm-6 form-group">
                        <input class="form-control" type="text" name="transaction[debitDescription]" placeholder="Debit Description">    
                    </div>
                    <div class="col col-sm-1 form-group">
                        <input class="form-control" type="text" name="transaction[debitPostReference]" placeholder="P Ref.">
                    </div>
                    <div class="col col-sm-2 form-group">
                        <input class="form-control MoneyAmounts Debit" type="text" name="transaction[debitAmount]" placeholder="Debit Amount">
                    </div>
                    <div class="col MoneyOuts col-sm-2"></div>
                </div>
                <h3>Credits - <span id="numberOfCredits">1</span></h3>
                <div class="row">
                    <div class="col col-sm-1">1</div>
                    <div class="col col-sm-6 form-group">
                        <input class="form-control" type="text" name="transaction[creditDescription]" placeholder="Credit Description">    
                    </div>
                    <div class="col col-sm-1 form-group">
                        <input class="form-control" type="text" name="transaction[creditPostReference]" placeholder="P Ref.">
                    </div>
                    <div class="col col-sm-2 form-group">
                        <input class="form-control MoneyAmounts Credit" type="text" name="transaction[creditAmount]" placeholder="Credit Amount">
                    </div>
                    <div class="col MoneyOuts col-sm-2"></div>
                </div>
                <div id="credits"></div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block col-sm-2">Submit</button>
                </div>
            </form>
            <button id="addCredits" class="btn btn-primary btn-warning">Add a Credit</button>
            
            
            <a href="/companies">Back</a>
       
        
    
</div>

<% include ../partials/scripts %>
<script type="text/javascript" src="/newTransaction.js"></script>
<% include ../partials/footer %>