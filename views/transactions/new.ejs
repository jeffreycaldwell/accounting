<% include ../partials/header %>



<div class="container">
    <div class="row">
        
        <div style="width: 50%; margin: 0 auto;">
            <h1 style="text-align: left;">Add a new Transaction</h1>
            <form action="" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[description]" placeholder="description">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[postReference]" placeholder="Post Reference">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[type]" placeholder="type">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="transaction[amount]" placeholder="amount">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/companies">Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/scripts %>
<script type="text/javascript" src="/newTransaction.js"></script>
